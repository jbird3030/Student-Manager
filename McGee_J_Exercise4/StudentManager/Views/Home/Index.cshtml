@model IEnumerable<Student>

@{
    ViewBag.Title = "Student Manager";
}

<a asp-action="Add" asp-controller="Student" class="ml-2">Add Contact</a>
<a asp-action="History" asp-controller="StudentHistory" class="ml-2">View History</a>
<form>
    <p>
        Last Name: <input type="text" name="search"/>
        <input type="submit" value="Search"/>
    </p>
</form>


<table class="table mt-2">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Student student in Model)
        {
        <tr>
            <td>
                <a asp-action="Details" asp-controller="Student"
                   asp-route-id="@student.StudentId" asp-route-slug="@student.Slug">
                    @student.FirstName
                </a>
            </td>
            <td>
                <a asp-action="Details" asp-controller="Student"
                   asp-route-id="@student.StudentId" asp-route-slug="@student.Slug">
                    @student.LastName
                </a>
            </td>
            <td>@student.City</td>
            <td>@student.State</td>
            <td>@student.Zip</td>
        </tr>
        }
    </tbody>
</table>



